		<class>co.edu.icesi.jpa.springboot.model.TCohorte</class>
		<class>co.edu.icesi.jpa.springboot.model.TCohortePK</class>
		<class>co.edu.icesi.jpa.springboot.model.TCurso</class>
		<class>co.edu.icesi.jpa.springboot.model.TCursoPK</class>
		<class>co.edu.icesi.jpa.springboot.model.TFacultad</class>
		<class>co.edu.icesi.jpa.springboot.model.THorarioCurso</class>
		<class>co.edu.icesi.jpa.springboot.model.THorarioCursoPK</class>
		<class>co.edu.icesi.jpa.springboot.model.TMateria</class>
